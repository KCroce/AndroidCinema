<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:name=".login.MyApplication"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidFinal"
        tools:targetApi="31" >

        <activity
            android:name=".login.Login"
            android:exported="true"
            tools:ignore="Instantiatable"
            android:theme="@style/Theme.AndroidFinal">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".login.dashboard.ui.FavoritesActivity" />
        <activity android:name=".login.dashboard.ui.RatingActivity" />
        <activity android:name=".login.dashboard.ui.MovieDetailsActivity" />
        <activity
            android:name=".login.dashboard.ui.MainActivity"
            android:exported="true"> <!-- Corrigido aqui -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
    </application>
</manifest>
